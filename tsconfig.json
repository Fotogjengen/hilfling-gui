{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "./grp"
  },
  "include": ["src", "index.js"],
  "exclude": ["**/*/*.stories.*"]
}
